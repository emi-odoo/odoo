<odoo>
  <data>

  <record model="ir.ui.view" id="emi_library_form_view">
            <field name="name">course.form</field>
            <field name="model">emi_library.book</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
            <form string="Book Form">
                <sheet>
                <group>
                    <field name="name"/>
                    <field name="edition_year"/>
                </group>
                </sheet>
            </form>
            </field>
        </record>

  <record model="ir.ui.view" id="emi_library_tree_view">
            <field name="name">book.tree</field>
            <field name="model">emi_library.book</field>
            <field name="arch" type="xml">
                <tree string="Book Tree">
                    <field name="name"/>
                    <field name="edition_year"/>
                    <field name="available"/>
                </tree>
            </field>
  </record>

  <record model="ir.actions.act_window" id="emi_library_book_list_action">
            <field name="name">Books</field>
            <field name="res_model">emi_library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first Book</p>
            </field>
  </record>
  </data>
</odoo>